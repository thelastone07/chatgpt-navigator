{
    "manifest_version": 3,
    "name" : "Chatgpt Navigator",
    "version" : "1.0",
    "description": "A Chrome extension to enhance navigation in ChatGPT and other AI chat tools",
    "icons":{
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "permissions" : [
        "scripting",
        "activeTab",
        "tabs",
        "webNavigation"
    ],
    "host_permissions": [
        "https://chatgpt.com/*"   
    ],
    "content_scripts": [
        {
            "matches": ["https://chatgpt.com/*"],
            "js": ["chatgpt.js"],
            "run_at": "document_idle"
        }
    ]
}