{
    "manifest_version": 3,
    "name" : "Chatgpt Navigator",
    "version" : "1.0",
    "description": "A Chrome extension to enhance navigation in ChatGPT and other AI chat tools",
    "permissions" : [
        "scripting",
        "activeTab"
    ],
    "content_scripts" : [
        {
            "matches": ["https://chatgpt.com/c/*"],
            "js": ["chatgpt.js"],
            "run_at" : "document_idle"
        }
    ]
}